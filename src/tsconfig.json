{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    // "noEmit": true, // emit for debugger testing purposes.
    "sourceMap": false,
    "module": "es2015",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build/",
    "module": "commonjs"
  },
  "exclude": ["node_modules", "**/*.infra-test.ts"]
}
